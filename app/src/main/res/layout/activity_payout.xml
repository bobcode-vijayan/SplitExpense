<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEFF9"
    tools:context="com.bobcode.splitexpense.activities.PayoutActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/payoutDetailsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="Summary:"
        android:textColor="@color/primary_text"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/payoutTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/payoutDetailsHeader"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp">

        <TableRow android:id="@+id/payoutHeader">

            <TextView
                style="@style/textViewPayout"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:padding="4dp"
                android:text="name" />

            <TextView
                style="@style/textViewPayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:padding="4dp"
                android:text="expenses" />

            <TextView
                style="@style/textViewPayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:padding="4dp"
                android:text="total \n spend" />

            <TextView
                style="@style/textViewPayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:padding="4dp"
                android:text="owes" />

            <TextView
                style="@style/textViewPayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:padding="4dp"
                android:text="is\nowed" />

            <TextView
                style="@style/textViewPayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cell_shape"
                android:gravity="center"
                android:padding="4dp"
                android:text="balance" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/payoutDetailsEvenOutAllDebts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/payoutTableLayout"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="Payments to even out all debts:"
        android:textColor="@color/primary_text"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>
