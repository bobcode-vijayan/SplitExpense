<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splash_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vijayananjalees.navigationdrawapp3.MainScreen">

    <RelativeLayout
        android:id="@+id/blankView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff">


        <TextView
            android:id="@+id/txtHeader1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:elevation="8dp"
            android:text="@string/landing_page_main_header"
            android:textColor="@color/landingPageBackGround"
            android:textSize="20sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/blankView"
        android:background="@color/landingPageBackGround">


        <TextView
            android:id="@+id/txtHeader2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="8dp"
            android:text="@string/landing_page_sub_header"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtCurrentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp"
            android:elevation="8dp"
            android:text="HH:MM AM/PM"
            android:textColor="@color/text_icons"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtCurrentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txtCurrentTime"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:elevation="8dp"
            android:text="Sunday April 5 2015"
            android:textColor="@color/text_icons"
            android:textSize="15sp" />

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/btnNavigationToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:elevation="8dp"
            android:src="@drawable/ic_action_tick"
            fab:fab_colorNormal="@color/accent"
            fab:fab_colorRipple="@color/primary" />
    </RelativeLayout>

</RelativeLayout>
